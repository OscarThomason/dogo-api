generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(CUSTOMER)
  createdAt    DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  priceCents  Int
  currency    String   @default("MXN")
  imageUrl    String
  stock       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
}
